<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".common.activities.FeedBackActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Send us your valuable feedback"
        android:textAlignment="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/feedback_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_below="@+id/tv_title"
        android:text="Name" />

    <EditText
        android:id="@+id/feedback_name_et"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_name_tv"
        android:layout_marginHorizontal="10dp"
        android:imeOptions="actionNext" />

    <TextView
        android:id="@+id/feedback_contact_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_name_et"
        android:imeOptions="actionNext"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:text="Contact" />

    <EditText
        android:id="@+id/feedback_contact_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_below="@+id/feedback_contact_name_tv"
        android:layout_marginHorizontal="10dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/feedback_desc_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedback_contact_et"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/bg_edit_text"
        android:gravity="top"
        android:layout_marginVertical="10dp"
        android:hint="Description"
        android:textSize="14sp"
        android:imeOptions="actionDone"
        android:minHeight="200dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/feedback_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/feedback_desc_et"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:text="Submit" />
</RelativeLayout>