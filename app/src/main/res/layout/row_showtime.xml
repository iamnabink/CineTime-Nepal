<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/s_hall_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/colorAccent"
            android:src="@drawable/no_image_placeholder" />
        <TextView
            android:id="@+id/s_hall_name_tv"
            android:layout="@id/s_hall_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="18sp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="Big Movies"
            android:layout_toRightOf="@id/s_hall_iv" />
        <TextView
            android:id="@+id/s_location_tv"
            android:layout_below="@id/s_hall_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16sp"
            android:textSize="14sp"
            android:text="Kamalpokhari"
            android:layout_toRightOf="@id/s_hall_iv" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/time_recycler_v"
        android:padding="8dp"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>