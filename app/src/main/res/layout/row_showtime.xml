<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/s_hall_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:src="@drawable/avatar" />
        <TextView
            android:id="@+id/s_hall_name_tv"
            android:layout="@id/s_hall_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="18sp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="Big Movies"
            android:layout_toRightOf="@id/s_hall_iv" />
        <TextView
            android:id="@+id/s_name_tv"
            android:layout_below="@id/s_hall_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16sp"
            android:textSize="14sp"
            android:text="Kamalpokhari"
            android:layout_toRightOf="@id/s_hall_iv" />
    </RelativeLayout>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_btn_background"
            android:layout_marginRight="10dp"
            android:text="12:12 PM"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_btn_background"
            android:layout_marginRight="10dp"
            android:text="12:12 PM"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_btn_background"
            android:layout_marginRight="10dp"
            android:text="12:12 PM"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_btn_background"
            android:layout_marginRight="8dp"
            android:text="12:12 PM"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@android:color/black"/>
</LinearLayout>