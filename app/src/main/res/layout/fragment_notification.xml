<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notification_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/row_notification" />

    <LinearLayout
        android:id="@+id/empty_v_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone">
        <include layout="@layout/layout_empty_view" />
    </LinearLayout>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:id="@+id/notification_shimmer_effect"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/qw"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_circular_view"/>
                <TextView
                    android:id="@+id/wq"
                    android:layout_toRightOf="@id/qw"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="100dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="2dp"
                    android:background="@color/shimmer_effect"/>

                <TextView
                    android:id="@+id/se"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/wq"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_effect" />
                <View
                    android:layout_below="@id/se"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/shimmer_effect"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/as"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_circular_view"/>
                <TextView
                    android:id="@+id/sa"
                    android:layout_toRightOf="@id/as"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="100dp"
                    android:background="@color/shimmer_effect"/>

                <TextView
                    android:id="@+id/ds"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sa"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_effect" />
                <View
                    android:layout_below="@id/ds"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/shimmer_effect"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/gh"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_circular_view"/>
                <TextView
                    android:id="@+id/fg"
                    android:layout_toRightOf="@id/gh"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="100dp"
                    android:background="@color/shimmer_effect"/>

                <TextView
                    android:id="@+id/df"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fg"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_effect" />
                <View
                    android:layout_below="@id/df"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/shimmer_effect"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/yt"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_circular_view"/>
                <TextView
                    android:id="@+id/hj"
                    android:layout_toRightOf="@id/yt"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="100dp"
                    android:background="@color/shimmer_effect"/>

                <TextView
                    android:id="@+id/mn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hj"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_effect" />
                <View
                    android:layout_below="@id/mn"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/shimmer_effect"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/xs"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/bg_circular_view"/>
                <TextView
                    android:id="@+id/sx"
                    android:layout_toRightOf="@id/xs"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="100dp"
                    android:background="@color/shimmer_effect"/>

                <TextView
                    android:id="@+id/bv"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sx"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/shimmer_effect" />
                <View
                    android:layout_below="@id/bv"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/shimmer_effect"/>
            </RelativeLayout>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

</RelativeLayout>